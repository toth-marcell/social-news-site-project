<article style="margin-left: <%= level * 50 %>px">
  <button>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="1em"
      height="1em"
      viewBox="0 0 24 24"
      aria-label="upvote arrow"
    >
      <path
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 8l-7 7M12 8l7 7"
      />
    </svg>
    <%= comment.votes %>
  </button>
  <span>
    by
    <a href="/users/<%= post.User.id %>"><%= comment.User.name %></a>
  </span>
  <% for (paragraph of comment.text.split("\r\n\r\n")) { %>
  <p><%= paragraph %></p>
  <% } %>
</article>
<% if (comment.Children.length > 0) { %> <% for (comment of comment.Children) {
%> <%- include("comment", {comment, level: level + 1}) -%> <% }} %>

<%- include("head") -%>
<article>
  <button>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="1em"
      height="1em"
      viewBox="0 0 24 24"
      aria-label="upvote arrow"
    >
      <path
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 8l-7 7M12 8l7 7"
      />
    </svg>
    <%= comment.votes %>
  </button>
  <span
    >by
    <a href="/users/<%= comment.UserId %>"><%= comment.User.name %></a></span
  >
  <span
    >on <a href="/posts/<%= comment.PostId %>"><%= comment.Post.title %></a>
  </span>
  <% for (paragraph of comment.text.split("\r\n\r\n")) { %>
  <p><%= paragraph %></p>
  <% } %>
</article>
<article>
  <form method="post">
    <label>
      Comment
      <textarea name="text"></textarea>
    </label>
    <% if (typeof(msg_fail) != "undefined") { %>
    <mark class="msg msg-fail"><%= msg_fail %></mark>
    <% } %>
    <button type="submit">Add comment</button>
  </form>
</article>
<%- include("foot") -%>
